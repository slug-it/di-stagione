<resources>

    <style name="BaseDSThemeLight" parent="android:Theme.Light">
    </style>

    <style name="DSThemeLight" parent="BaseDSThemeLight">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackgroundCacheHint">#00000000</item>
        <item name="backgroundColor">@color/background_winter_months</item>
        <item name="sideLength">16dp</item>

        <item name="TabBarItemAutumnStyle">
            @style/BarItemWidget.AutumnBarItem
        </item>

        <item name="TabBarItemWinterStyle">
            @style/BarItemWidget.WinterBarItem
        </item>

        <item name="TabBarItemSpringStyle">
            @style/BarItemWidget.SpringBarItem
        </item>

        <item name="TabBarItemSummerStyle">
            @style/BarItemWidget.SummerBarItem
        </item>
    </style>

    <style name="Widget">
    </style>

    <style name="BarItemWidget" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:textAppearance">@style/TextAppearance.BarItem</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BarItemWidget.AutumnBarItem">
        <item name="android:background">@drawable/autumn_bar_item</item>
    </style>

    <style name="BarItemWidget.WinterBarItem">
        <item name="android:background">@drawable/winter_bar_item</item>
    </style>

    <style name="BarItemWidget.SpringBarItem">
        <item name="android:background">@drawable/spring_bar_item</item>
    </style>

    <style name="BarItemWidget.SummerBarItem">
        <item name="android:background">@drawable/summer_bar_item</item>
    </style>

    <style name="TextAppearance.BarItem" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bar_item_foreground</item>
    </style>

</resources>
